- content_for :map do
  - controls = '{scrollwheel: false,zoomControl:true, zoomControlOptions: {position: google.maps.ControlPosition.RIGHT_TOP}, panControlOptions: {position: google.maps.ControlPosition.RIGHT_TOP}}'
  - json = {map_options: {center_latitude: -23.5489433, center_longitude: -46.6388182, detect_location: true, center_on_user: true, zoom: 10, raw: controls}}
  .sized_map
    = gmaps json

- content_for :search do
  .row
    .span12.search
      %h3.center
        Encontre a melhor escola para o seu filhos no caminho de casa para o Trabalho.
      %p.center.subline
        disponível em todo território brasileiro
      %p
      .row.titles
        .span1
        .span4
          Origem (Sua casa)
        .span4
          Destino (Seu Trabalho)
        .span1
    
      = form_tag("/rotas/criar") do
        .row
          .span1
          .span4
            = text_field_tag(:origin_location, @origin, :placeholder => "ex: São Paulo")
          .span4
            = text_field_tag(:destination_location, @destination, :placeholder => "ex: Caraguatatuba")
          / .span4
          /   = text_field_tag(:detour, @default_detour, :placeholder => "1")
          .span1
            = submit_tag "Encontrar Escolas", class: "btn btn-primary"
        - if not @erros.nil? and not @errors.empty?
          .row
            .span1
            .span4.red
              - if @errors[0]
                Não foi possível encontrar esse endereço.
            .span4.red
              - if @errors[1]
                Não foi possível encontrar esse endereço.          
            .span1

- content_for :arguments do
  .span4
